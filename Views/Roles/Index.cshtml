@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<div class="top-buffer"></div>
<div class="card border-primary mb-3" style="margin-top:10px !important">
    <div class="card-header bg-primary text-white">CAPTURA DE PROSPECTOS</div>
    <div class="card-body" id="content">
        <a asp-action="Create" class="btn btn-secondary">Crear un Rol</a>
  
        <table class="table table-sm table-bordered table-bordered">
            <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td i-role="@role.Id"></td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Modificar</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Borrar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

